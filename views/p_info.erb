        <div class="pure-control-group">
            <label for="last">Last Name</label>
            <input id="last" name="last" type="text" placeholder="Your Last Name" value=<%=session[:last]%> required>
            <!-- <span class="pure-form-message-inline">required</span> -->
        </div>



        <div class="pure-control-group">
            <label for="street">Address</label>
            <input id="street" name="street" type="text" placeholder="Street" value=<%=session[:street]%> required>
            <!-- <span class="pure-form-message-inline">required</span> -->
        </div>

        <div class="pure-control-group" >
            <label for="state">State</label>
            <select id="state" name="state" value=<%=session[:state]%> required>
                <option>Select</option>
                <option>Alaska</option>
