<!-- Start Pure Form HTML -->
<center>
<div class="container rounded-green">
<h3><strong>PLEASE ENTER CONTACT INFORMATION</h3></strong>
<!-- <form class="pure-form pure-form-aligned"> -->
<form action="/personalinfo" method="post" class="pure-form pure-form-aligned">
    <fieldset>
        <div class="pure-control-group">
            <label for="first">First Name</label>
            <input id="first" name="first" type="text" placeholder="Your First Name" value=<%=session[:first]%> required>
