                <option>Vermont</option>
                <option>Washington</option>
                <option>Wisconsin</option>
                <option>West Virginia</option>
                <option>Wyoming</option>
            </select>
        </div>



        <div class="pure-control-group">
            <label for="city">City</label>
            <input id="city" name="city" type="text" placeholder="City" value=<%=session[:city]%> required>
            <!-- <span class="pure-form-message-inline">required</span> -->
        </div>


        <div class="pure-control-group">
            <label for="zip">Zip / Postal Code</label>
            <input id="zip" name="zip" type="text" placeholder="5 Digit Zip" value=<%=session[:city]%> required>
            <!-- <span class="pure-form-message-inline">required</span> -->
        </div>

        <div class="pure-control-group">
            <label for="phonenumber">Phonenumber</label>
            <input id="phonenumber" name="phonenumber" type="Digit" placeholder="+ (XXX) XXX-XXXX" value=<%=session[:phonenumber]%> required>
            <!-- <span class="pure-form-message-inline">required</span> -->
        </div>

        <div class="pure-control-group">
            <label for="email">Email Address</label>
            <input id="email" name="email" type="email" placeholder="Email Address" value=<%=session[:email]%> required>
            <!-- <span class="pure-form-message-inline">required</span> -->
        </div>

        <div class="pure-controls">
            <button type="submit" class="pure-button button-go">Continue</button>
            <button onclick="goBack()" class="pure-button btn-mm">Go Back</button>
        </div>
    </fieldset>
</form>
</center>
</div>
